{{!
    @template tool_moodlenet/share_modal_content_done

    This template renders title for share modal.

    Example context (json):
    {

    }
}}
<button type="button" class="close p-2 pt-4" data-action="hide" aria-label="{{#cleanstr}}closebuttontitle{{/cleanstr}}">
    <span aria-hidden="true">&times;</span>
</button>
<div class="moodlenet-share-modal-content text-center">
    <div class="half-circle-status{{#success}} success{{/success}}{{^success}} fail{{/success}}">
        <span class="status-icon pt-5{{#success}} text-success{{/success}}{{^success}} text-danger{{/success}}">
            {{#success}}
                {{#pix}} t/check, core {{/pix}}
            {{/success}}
            {{^success}}
                {{#pix}} fp/cross, theme {{/pix}}
            {{/success}}
        </span>
        <span class="status-text font-weight-bold h3 pt-5">
            {{#success}}
                {{#str}} share_success_title, tool_moodlenet {{/str}}
            {{/success}}
            {{^success}}
                {{#str}} share_fail_title, tool_moodlenet {{/str}}
            {{/success}}
        </span>
    </div>
    <div class="result">
        <span class="d-block h5 font-weight-normal pt-1 result-text">
            {{#success}}
                {{#str}} share_success_text, tool_moodlenet {{/str}}
            {{/success}}
            {{^success}}
                {{#str}} share_fail_text, tool_moodlenet {{/str}}
            {{/success}}
        </span>
        {{#success}}
            <span class="d-block pt-5 result-link">
                <a class="btn btn-primary" href="https://moodle.net/resource/s57ugtsy61gm-basic-arithmetic-quiz-for-eslefl-learners" target="_blank">
                    {{#str}} view_in_moodle, tool_moodlenet {{/str}}
                </a>
            </span>
        {{/success}}
    </div>
</div>
