{{!
    @template core/moodlenet/send_activity_modal_authorize
    This template renders title for share modal.
    Example context (json):
    {
    }
}}
<div class="moodlenet-share-modal-content d-flex h-100">
    <h3>Moodle Authentication</h3>
    <h4>Authorise account to share with Moodle</h4>
    <div class="justify-content-center">
        {{^isauthorized}}
            <span class="align-self-center">
                <button class="btn btn-primary" data-action="authorize" data-url="{{loginurl}}">
                    {{#str}}login, repository{{/str}}
                </button>
            </span>
        {{/isauthorized}}
    </div>
</div>
