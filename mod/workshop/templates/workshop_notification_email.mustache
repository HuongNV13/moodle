{{!
    @template mod_workshop/workshop_notification_email

    Template which defines a workshop phase changed notification email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * courseshortname
    * coursefullname
    * workshopname
    * oldphase
    * newphase
    * opendate
    * closedate
    * workshoplink
}}

<div>
    <p>{{# str }} emailsalutation, workshop, {{ firstname }} {{/ str }}</p>
    <p>{{# str }} emailautomationnote, workshop {{/ str }}</p>
    <p>
        {{# singlephase }}
            {{# str }} emailnotification_singlephase, workshop, {
                "courseshortname": {{# quote }} {{{ courseshortname }}} {{/ quote }},
                "coursefullname": {{# quote }} {{{ coursefullname }}} {{/ quote }},
                "workshopname": {{# quote }} {{{ workshopname }}} {{/ quote }},
                "newphase": {{# quote }} {{{ newphase }}} {{/ quote }}
                }
            {{/str}}
        {{/ singlephase }}
        {{^ singlephase }}
            {{# str }} emailnotification, workshop, {
                "courseshortname": {{# quote }} {{{ courseshortname }}} {{/ quote }},
                "coursefullname": {{# quote }} {{{ coursefullname }}} {{/ quote }},
                "workshopname": {{# quote }} {{{ workshopname }}} {{/ quote }},
                "oldphase": {{# quote }} {{{ oldphase }}} {{/ quote }},
                "newphase": {{# quote }} {{{ newphase }}} {{/ quote }}
                }
            {{/str}}
        {{/ singlephase }}
    </p>
    {{# opendate }}
        <p>{{# str }} emailopendate, mod_workshop, {{ opendate }} {{/ str }}</p>
    {{/ opendate }}
    {{# enddate }}
        <p>{{# str }} emailclosedate, mod_workshop, {{ enddate }} {{/ str }}</p>
    {{/ enddate }}
    <p>
        {{# singlephase }}
            {{# str }} emailworkshoplink_singlephase, mod_workshop {{/ str }}
        {{/ singlephase }}
        {{^ singlephase }}
            {{# str }} emailworkshoplink, mod_workshop {{/ str }}
        {{/ singlephase }}
        <a href="{{ workshoplink }}">{{ workshoplink }}</a>
    </p>
</div>
